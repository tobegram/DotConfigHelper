{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "#A2734C",
          "foreground": "#FFEB3B",
          "style": "plain",
          "template": "\u26a1 ",
          "type": "root"
        },

        //-------------------BETRIEBSSYSTEM-----------------------------------------------
        {
        //  "background": "#A2734C",
        //  "foreground": "#ffffff",
        //  "style": "diamond",
        //  "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
         // "trailing_diamond": "\ue0b0",
        //  "type": "os"
        },
        //-------------------BETRIEBSSYSTEM-----------------------------------------------


        //-------------------PFAD-----------------------------------------------
        {
          "background": "#A2734C",
          "foreground": "#ffffff",
          "leading_diamond": "<transparent,#A2734C>\ue0b0</>",
          "properties": {
            "folder_icon": "...",
            "folder_separator_icon": "<transparent> \ue0bd </>",
            "home_icon": "\ueb06",
            "style": "agnoster_short"
          },
          "style": "diamond",
          "template": " {{ .Path }} ",
          "trailing_diamond": "\ue0b0",
          "type": "path"
        },
        //-------------------PFAD-----------------------------------------------

        //-------------------GIT-----------------------------------------------
        {
          "background": "#00C853",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FFEB3B{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFCC80{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FF{{ end }}"
          ],
          "foreground": "#000000",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true
          },
          "style": "powerline",
          "template": " {{ .HEAD }}{{ if .Staging.Changed }}<#FF6F00> \uf046 {{ .Staging.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        //-------------------GIT-----------------------------------------------


        
        //------------------Zeit f√ºr Ausf√ºhrung-----------------------------------------------
        {
          "background": "#A2734C",
          "foreground": "#ffffff",
          "leading_diamond": "<transparent,#A2734C>\ue0b0</>",
          "properties": {
            "style": "dallas",
            "threshold": 0
          },
          "style": "diamond",
          "template": " {{ .FormattedMs }}s ",
          "trailing_diamond": "\ue0b0",
          "type": "executiontime"
        },
        //------------------Zeit f√ºr Ausf√ºhrung-----------------------------------------------
        


        //---------------------------ERROR-----------------------------------------------
        {
          "background": "#C7695E",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": "<transparent> \uf12a</> {{ reason .Code }} ",
          "type": "status"
        }
        //---------------------------ERROR-----------------------------------------------
        
      ],
      "type": "prompt"
    },
    
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#C7695E",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ff0000{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "\u276f ",
          "type": "status"
        }



      ],
      "type": "prompt"
    }


    
  ],
  "newline": true,
  "console_title_template": "{{if .Root}} \u26a1 {{end}}{{.Folder | replace \"~\" \"üèö\" }} @ {{.HostName}}",
  "version": 3
}
